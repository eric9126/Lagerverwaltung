@model Lagerverwaltung.Models.Kategorien

@{
    ViewData["Title"] = "Kategorie erstellen oder bearbeiten";
}

<form asp-controller="Kategorien" asp-action="ExecuteCreateOrEditKategorie" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Kategorie bearbeiten oder neu erstellen</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="Id"/>

            <div class="row">
                <div class="col">
                    <label>Bezeichnung</label>
                    <input class="form-control" asp-for="Bezeichnung" type="text"/>
                </div>
                <div class="col">
                    <label>Farbe</label>
                    <input class="form-control" asp-for="Farbe" type="text"/>
                </div>
                <div class="col">
                    <label>Bemerkungen</label>
                    <input class="form-control" asp-for="Bemerkungen" type="text"/>
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
            <button class="btn btn-danger" asp-controller="Kategorien" asp-action="BackToKategorien">Abbrechen</button>
        </div>

    </div>   
</form>
