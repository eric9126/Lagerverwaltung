@using Lagerverwaltung.Models
@model Lagerverwaltung.Models.Virtuell.LagerplatzVM

@{
    ViewData["Title"] = "Lagerplatz erstellen oder bearbeiten";
}

<form asp-controller="Lagerplatz" asp-action="ExecuteCreateOrEditLagerplatz" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Lagerplatz bearbeiten oder neu erstellen</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="lagerplatz.Id" type="number"/>

            <div class="row">
                <div class="col">
                    <label>Bezeichnung</label>
                    <input class="form-control" asp-for="lagerplatz.Bezeichnung" type="text"/>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Lagerort</label>
                        <select class="form-select" asp-items="Model.selectLagerortList" asp-for="lagerplatz.LagerortID">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Artikel</label>
                        <select class="form-select" asp-items="Model.selectArtikelList" asp-for="lagerplatz.ArtikelID">
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Soll-Bestand</label>
                    <input class="form-control" asp-for="lagerplatz.Soll" type="number" />
                </div>
                <div class="col">
                    <label>Ist-Bestand</label>
                    <input class="form-control" asp-for="lagerplatz.Ist" type="number" />
                </div>
                <div class="col">
                    <label>Bemerkungen (muss nicht ausgefüllt werden)</label>
                    <input class="form-control" asp-for="lagerplatz.Bemerkungen" type="text" />
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
            <button class="btn btn-danger" asp-controller="Lagerplatz" asp-action="BackToLagerplatz">Abbrechen</button>
        </div>

    </div>   
</form>
