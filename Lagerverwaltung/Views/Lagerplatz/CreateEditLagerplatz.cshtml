@model Lagerverwaltung.Models.Lagerplatz

@{
    ViewData["Title"] = "Lagerplatz erstellen oder bearbeiten";
}

<form asp-controller="Lagerplatz" asp-action="ExecuteCreateOrEditLagerplatz" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Lagerplatz bearbeiten oder neu erstellen</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="Id"/>

            <div class="row">
                <div class="col">
                    <label>Bezeichnung</label>
                    <input class="form-control" asp-for="Bezeichnung" type="text"/>
                </div>
                <div class="col">
                    <label>Lagerort ID</label>
                    <input class="form-control" asp-for="LagerortID" type="number"/>
                </div>
                <div class="col">
                    <label>Artikel ID</label>
                    <input class="form-control" asp-for="ArtikelID" type="number" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Soll-Bestand</label>
                    <input class="form-control" asp-for="Soll" type="number" />
                </div>
                <div class="col">
                    <label>Ist-Bestand</label>
                    <input class="form-control" asp-for="Ist" type="number" />
                </div>
                <div class="col">
                    <label>Bemerkungen</label>
                    <input class="form-control" asp-for="Bemerkungen" type="text" />
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
            <button class="btn btn-danger" asp-controller="Lagerplatz" asp-action="BackToLagerplatz">Abbrechen</button>
        </div>

    </div>   
</form>
