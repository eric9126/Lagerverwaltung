@using Lagerverwaltung.Models
@model (Auftrag auftrag, Kunde kunde)

@{
    ViewData["Title"] = "Auftrag erstellen oder bearbeiten";
}

<form asp-controller="Auftrag" asp-action="ExecuteCreateOrEditAuftrag" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Auftrag bearbeiten oder neu erstellen</h5>
        </div>

        <div class="card-body">

            <input asp-for="auftrag.Id" type="number"/>

            <div class="row">
                <div class="col">
                    <label>Kunden-ID</label>
                    <input class="form-control" asp-for="auftrag.KundeID" type="number"/>
                </div>
                <div class="col">
                    <label>Kunde</label>
                    <input class="form-control" asp-for="kunde.Firma" type="text" />
                </div>
                <div class="col">
                    <label>Bemerkungen</label>
                    <input class="form-control" asp-for="auftrag.Bemerkungen" type="text" />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label>Kunde</label>
                    <select class="form-select">

                        @foreach (Kunde kunde in @ViewBag.Kunde)
                        {
                            <option>@kunde.Id | @kunde.Firma @kunde.Name @kunde.Vorname</option>
                        }

                    </select>
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
            <button class="btn btn-danger" asp-controller="Auftrag" asp-action="BackToAuftrag">Abbrechen</button>
        </div>

    </div>   
</form>
