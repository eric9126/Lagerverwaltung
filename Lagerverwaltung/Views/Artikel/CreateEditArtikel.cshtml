@model Lagerverwaltung.Models.Artikel

@{
    ViewData["Title"] = "Artikel erstellen oder bearbeiten";
}

<form asp-controller="Artikel" asp-action="ExecuteCreateOrEditArtikel" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Artikel bearbeiten oder neu erstellen</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="Id"/>

            <div class="row">
                <div class="col">
                    <label>Name</label>
                    <input class="form-control" asp-for="Name" type="text"/>
                </div>
                <div class="col">
                    <label>Kategorie</label>
                    <input class="form-control" asp-for="KategorieID" type="text"/>
                </div>
                <div class="col">
                    <label>Beschreibung</label>
                    <input class="form-control" asp-for="Beschreibung" type="text"/>
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
            <button class="btn btn-danger" asp-controller="Artikel" asp-action="BackToArtikel">Abbrechen</button>
        </div>

    </div>   
</form>
