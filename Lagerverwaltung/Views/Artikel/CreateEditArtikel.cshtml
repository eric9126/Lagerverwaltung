@using Lagerverwaltung.Models
@model Lagerverwaltung.Models.Virtuell.ArtikelVM

@{
    ViewData["Title"] = "Artikel erstellen oder bearbeiten";
}

<form asp-controller="Artikel" asp-action="ExecuteCreateOrEditArtikel" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Artikel bearbeiten oder neu erstellen</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="artikel.Id"/>

            <div class="row">
                <div class="col">
                    <label>Name</label>
                    <input class="form-control" asp-for="artikel.Name" type="text"/>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Kategorie</label>
                        <select class="form-select" asp-items="Model.selectKategorienList" asp-for="artikel.KategorieID">
                        </select>
                    </div>
                </div>
                <div class="col">
                    <label>Beschreibung</label>
                    <input class="form-control" asp-for="artikel.Beschreibung" type="text"/>
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
            <button class="btn btn-danger" asp-controller="Artikel" asp-action="BackToArtikel">Abbrechen</button>
        </div>

    </div>   
</form>
